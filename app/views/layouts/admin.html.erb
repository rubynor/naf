
<!DOCTYPE html>
<html lang="no">
  <head>
    <meta charset="utf-8">
    <title>NAF 0-100 Admin</title>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le styles -->
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "application" %>
  <%= google_analytics %>
  <%= csrf_meta_tags %>
  <%= javascript_tag "var FORM_AUTH_TOKEN = '#{form_authenticity_token}';" %>
  <%= favicon_link_tag %>
  <style>
    .content{padding-top:100px;}
  </style>
  </head>

  <body>

    <%=render :partial => "/shared/topbar"%>

    <div class="container">
      <div class="content">

        <%= content_tag(:div, flash[:error], :id => "flash_error", :class => "alert-message error") if flash[:error] %>
        <%= content_tag(:div, flash[:notice], :id => "flash_notice", :class => "alert-message warning") if flash[:notice] %>
        <%= content_tag(:div, flash[:alert], :id => "flash_alert", :class => "alert-message warning") if flash[:alert] %>

         <%=yield%>
      </div>

      <footer>
        <p>&copy; NAF 2011</p>
      </footer>

    </div>

  </body>
</html>
