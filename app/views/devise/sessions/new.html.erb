    <div class="row">
      <div class="span10">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <div class="clearfix">
       <%= f.label :email, "E-post" %>
       <div class="input"><%= f.email_field :email %></div>
    </div>

    <div class="clearfix">
       <%= f.label :password, "Passord" %>
       <div class="input"><%= f.password_field :password %></div>
    </div>

   <% if devise_mapping.rememberable? -%>
    <div class="clearfix">
        <%= f.label :remember_me, "Husk meg" %>
        <div class="input">
          <ul class="inputs-list">
            <li>
              <label>
              <%= f.check_box :remember_me %>
              </label>
             </li>
            </ul>
         </div>
      </div>
     <%end%>

      <div class='actions'><%= f.submit "Logg inn", :class => "btn" %></div>
    <% end %>


      </div>
      <div class="span4">

      </div>
    </div>



