<script type='template', id='activity_tmpl'>
    <div class="modal hide fade">
      <div class="modal-header">
        <a href="#" class="close">&times;</a>
        <h3>{{summary}}</h3>
      </div>
      <div class="modal-body">
      <ul class="tabs" data-tabs="tabs">
          <li class="active"><a href="#info">Informasjon</a></li>
          <li><a href="#contact">Kontaktinformasjon</a></li>
          <li><a href="#price">Pris</a></li>
      </ul>

      <div class="pill-content">
          <div class="active" id="info" style='overflow:none;'>
      <table>
        <tr><td>{{description}}</td></tr>
      <tr>
        <td><b>Hvor og når:</b> {{location.name}}
        <div>{{address}} <i>{{formatted_time dtstart}} - {{formatted_time dtend}}</i></div>
        </td>
      </tr>

      <tr><td><b>Viktig:</b> {{responsibility}} Ta med {{downcase vehicle}}.</td></tr>
      <tr><td colspan=2><a href={{video}} target='_blank'>Video</a></td></tr>
      </table>


          </div>
          <div id="contact">
          <table>
          <tr><td>Kontaktperson: </td><td>{{contact_name}}</td></tr>
          <tr><td>Telefon: </td><td>{{contact_phone}}</td></tr>
          <tr><td>E-post: </td><td>{{contact_mail}}</td></tr>
          </table>
          {{contact}}
          </div>

          <div id="price">
      {{#if free}}
        Aktiviteten er gratis.
      {{else}}
            <table>

            <tr>
              <td>Pris:</td><td>{{price}},-</td>
            </tr>

          {{#if member_price}}
            <tr>
              <td>Medlemspris:</td><td>{{member_price}},-</td>
            </tr>
          {{/if}}
            <tr>
              <td>MVA:</td><td>{{#if mva}}inkludert{{else}}kommer i tillegg{{/if}}</td>
            </tr>

            </table>
      {{/if}}
        </div>

    </div>

     </div>
      <div class="modal-footer">
        <a href="{{url}}" class="btn primary" target="_blank">Påmelding og mer informasjon</a>
      </div>
    </div>



</script>

